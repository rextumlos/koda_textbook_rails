<div class="container">
  <div class="d-flex flex-row justify-content-between align-items-center border-bottom mb-2">
    <h1>API Tutorials</h1>
    <div class="d-flex flex-column align-items-end">
      <span>IPIFY User IP: <%= @user_ip %></span>
      <span>IPInfo User IP info: <%= @user_ip_info['city'] %>, <%= @user_ip_info['country'] %> | <%= @user_ip_info['timezone'] %></span>
    </div>
  </div>

  <div class="d-flex flex-row">
    <div style="max-width: 45rem;" class="me-2 p-1">
      <div class="d-flex flex-row justify-content-between align-items-center">
        <h1>NewsAPI</h1>
        <%= form_with url: api_news_index_path, method: :get, class: 'form d-flex flex-row justify-content-center align-items-center' do |form| %>
          <div class="me-2 d-flex flex-row align-items-center">
            <span class="me-2">Category</span>
            <%= form.select :category, @categories, selected: params[:category], class: 'form-control' %>
          </div>
          <%= form.submit 'Search', class: 'btn btn-sm btn-primary h-75' %>
        <% end %>
      </div>

      <% @articles.each do |article| %>
        <div class="card mb-2">
          <div class="card-body">
            <h4 class="card-title"><%= article['title'] %></h4>
            <p>Author: <%= article['author'] %></p>
            <%= image_tag article['urlToImage'], class:"card-img px-4 mb-2", style:"max-height: 200px; width: 100%; object-fit: cover" if article['urlToImage'].present?%>
            <p><%= article['content'].truncate_words(10, omission: "... (read more)") if article['content'].present? %></p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="card w-50">
      <div class="d-flex flex-row justify-content-between align-items-center w-100 px-1 py-3 mb-2 border-bottom">
        <span><i class="fa-solid fa-cat fa-shake fa-2xl"></i> Cat Facts API</span>

        <%= form_with model: @catfact, url: api_catfacts_path, method: :post do |form| %>
          <%= form.submit 'Generate a cat fact', class: "btn btn-sm btn-primary" %>
        <% end %>
      </div>

      <div class="align-self-end me-2">
        <%= form_tag api_news_index_path, method: :get, class:"d-flex flex-row align-items-center" do |form| %>
          <%= check_box_tag :filter, '1' , params[:filter] == '1', class: 'me-1' %>
          <small class="me-2">Show only mine</small>
          <%= submit_tag 'Filter', class:"btn btn-sm btn-primary" %>
        <% end %>
      </div>

      <% @catfacts.each do |catfact| %>
        <div class="card m-2">
          <small class="card-header">Generated by: <%= catfact.user.email %></small>
          <div class="card-body">
            <small><%= catfact.fact %> -<%= catfact.created_at %></small>
          </div>
        </div>
      <% end %>
    </div>
  </div>

</div>

