<div class="container">
  <div class="d-flex flex-row justify-content-between align-items-center border-bottom mb-2">
    <h1>API Tutorials</h1>
    <div class="d-flex flex-column align-items-end">
      <span>IPIFY User IP: <%= @user_ip %></span>
      <span>IPInfo User IP info: <%= @user_ip_info['city'] %>, <%= @user_ip_info['country'] %>
        | <%= @user_ip_info['timezone'] %></span>
    </div>
  </div>

  <div class="d-flex flex-row">
    <div style="width: 100%; max-width: 55rem" class="me-2 p-1">
      <div class="d-flex flex-row justify-content-between align-items-center">
        <h1>NewsAPI</h1>
        <%= form_with url: api_news_index_path, method: :get, class: 'form d-flex flex-row justify-content-center align-items-center' do |form| %>
          <div class="me-2 d-flex flex-row align-items-center">
            <span class="me-2">Category</span>
            <%= form.select :category, @categories, selected: params[:category], class: 'form-control' %>
          </div>
          <%= form.submit 'Search', class: 'btn btn-sm btn-primary h-75' %>
        <% end %>
      </div>

      <% @articles.each do |article| %>
        <div class="card mb-2">
          <div class="card-body">
            <h4 class="card-title"><%= article['title'] %></h4>
            <p>Author: <%= article['author'] %></p>
            <%= image_tag article['urlToImage'], class: "card-img px-4 mb-2", style: "max-height: 200px; width: 100%; object-fit: cover" if article['urlToImage'].present? %>
            <p><%= article['content'].truncate_words(10, omission: "... (read more)") if article['content'].present? %></p>
          </div>
        </div>
      <% end %>
    </div>

    <div class="card" style="max-width: 25rem; height: 100%">
      <div style="height: 100%" class="d-flex flex-column mb-2">
        <div class="d-flex justify-content-center py-3 mb-2 border-bottom w-100">
          <span><i class="fa-regular fa-address-card"></i> Random User API</span>
        </div>
        <div class="h-100 d-flex flex-column justify-content-center align-items-center px-2">
          <div class="card w-100 mb-2">
            <div class="card-body d-flex flex-row justify-content-between">
              <div class="d-flex flex-column">
                <span class="border-bottom">
                  <%= @random_user['name']['first'] %> <%= @random_user['name']['last'] %>
                    <% if @random_user['gender'] == "male" %>
                    <i class="fa-solid fa-mars" style="color: #6ba1ff;"></i>
                  <% else %>
                    <i class="fa-solid fa-venus" style="color: #ed94ff;"></i>
                  <% end %>
                </span>
                <small>
                  <i class="fa-solid fa-location-dot fa-xs"></i> <%= @random_user['location']['city'] %>, <%= @random_user['location']['country'] %>
                </small>
                <small>
                  <i class="fa-regular fa-envelope fa-xs"></i> <%= @random_user['email'] %>
                </small>
                <small>
                  <i class="fa-solid fa-phone-flip fa-sm"></i> <%= @random_user['phone'] %>
                </small>
              </div>

              <%= image_tag @random_user['picture']['large'], class: 'card-img', style: "height: 100px; width: 100px; object-fit: cover" %>
            </div>
          </div>
          <%= link_to 'Generate random user', api_news_index_path, class: 'btn btn-sm btn-primary w-100' %>
        </div>
      </div>
      <div class="d-flex flex-column">
        <div class="d-flex flex-row justify-content-between align-items-center w-100 px-1 py-3 mb-2 border-bottom border-top">
          <span><i class="fa-solid fa-cat fa-shake fa-2xl"></i> Cat Facts API</span>
          <%= form_with model: @catfact, url: api_catfacts_path, method: :post do |form| %>
            <%= form.submit 'Generate a cat fact', class: "btn btn-sm btn-primary" %>
          <% end %>
        </div>

        <div class="align-self-end me-2">
          <%= form_tag api_news_index_path, method: :get, class: "d-flex flex-row align-items-center" do |form| %>
            <%= check_box_tag :filter, '1', params[:filter] == '1', class: 'me-1' %>
            <small class="me-2">Show only mine</small>
            <%= submit_tag 'Filter', class: "btn btn-sm btn-primary" %>
          <% end %>
        </div>

        <% @catfacts.each do |catfact| %>
          <div class="card m-2">
            <small class="card-header">Generated by: <%= catfact.user.email %></small>
            <div class="card-body">
              <small><%= catfact.fact %> -<%= catfact.created_at %></small>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

</div>

