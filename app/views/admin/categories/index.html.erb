<div class="container">
  <h1>Category</h1>

  <ul>
    <% @categories.each do |category| %>
      <li>
        <%= category.name %>
        <%= link_to :edit, edit_admin_category_path(category) %>
        <%= button_to :delete, admin_category_path(category), method: :delete %>
      </li>
    <% end %>
  </ul>

  <%= link_to 'new', new_admin_category_path %>
</div>